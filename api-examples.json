    "register_farmer": "curl -X POST http://localhost:8080/api/auth/register \\\n  -H \"Content-Type: application/json\" \\\n  -d '{\n    \"username\": \"johnfarmer\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\",\n    \"fullName\": \"John Doe\",\n    \"phoneNumber\": \"+254712345678\",\n    \"role\": \"FARMER\"\n  }'",
